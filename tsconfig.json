{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"lib": ["es2020", "esnext.asynciterable"],
		"moduleResolution": "bundler",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"sourceMap": true,
		"baseUrl": "src",
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "src/tests"]
}
